<h1>formulario confirm password</h1>

<div class="mb-3">
    <label for="idpassword">Confirm your password</label>
    <input type="password" name="password" id="idpassword" placeholder="Confirm your password to continue" required>
    @if (TempData["IncorrectPassword"] != null)
    {
        <br>
        <span class="text-danger">Incorrect password</span>
    }
    
</div>
<div class="mb-3">
    <input type="submit" value="submit">
    <a class="btn btn-primary" href="/user/manager/@Model.Id">Back</a>
</div>
