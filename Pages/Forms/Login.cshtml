@page "/auth/login"
@model LoginModel
@{
    ViewData["Title"] = "Login";
}

<div class="form-container">
    <h1>Login</h1>

    <form method="post">
        <div class="mb-3">
            <label asp-for="Input.Email" for="idemail" class="form-label">Email</label>
            <input asp-for="Input.Email" type="email" class="form-control" id="idemail" placeholder="Digite seu email">
            <span class="text-danger" asp-validation-for="Input.Email"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Input.Password" for="idpassword" class="form-label">Password</label>
            <input asp-for="Input.Password" type="password" class="form-control" id="idpassword" placeholder="Digite sua senha">
            <span class="text-danger" asp-validation-for="Input.Password"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Input.ConfirmPassword" for="idconfirmp" class="form-label">Confirm password</label>
            <input asp-for="Input.ConfirmPassword" type="password" class="form-control" id="idconfirmp" placeholder="Confirme sua senha">
            @if (ViewData["FailConfirm"] != null)
            {
                <span class="text-danger">Erro. Confirme a senha corretamente!</span>
            }
        </div>
        <div class="mb-3 form-check">
            @Html.CheckBoxFor(c => c.Input.Remember)
            <label asp-for="Input.Remember" class="form-check-label" >Remember-me</label>
        </div>
        @if (TempData["MessageError"] != null)
        {
            <span class="text-danger">@TempData["MessageError"]</span>
        }
        <br>
        <button type="submit" class="btn btn-primary">Confirmar</button>
        
    </form>
</div>

@section Scripts {
        <partial name="_ValidationScriptsPartial" />
}
