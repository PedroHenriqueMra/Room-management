@page "/auth/register"
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<div class="form-container">
    <h1>Registre-se</h1>

    <form method="post">
        <div class="mb-3">
            <label asp-for="Input.Name" for="idname" class="form-label">Name</label>
            <input asp-for="Input.Name" type="text" class="form-control" id="idname" placeholder="Digite seu nome">
            <span class="text-danger" asp-validation-for="Input.Name"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Input.Email" for="idemail">Email</label>
            <input asp-for="Input.Email" type="email" class="form-control" id="idemail" placeholder="Digite seu email">
            <span class="text-danger" asp-validation-for="Input.Email"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Input.Password" for="idpassword" class="form-label">Password</label>
            <input asp-for="Input.Password" type="password" class="form-control" id="idpassword"
                placeholder="Digite sua senha">
            <span class="text-danger" asp-validation-for="Input.Password"></span>
        </div>
        <button type="submit" class="btn btn-success">Registrar</button>
        @if (TempData["ErrorMessage"] != null)
        {
            <span class="text-danger">@TempData["ErrorMessage"]</span>
        }
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
