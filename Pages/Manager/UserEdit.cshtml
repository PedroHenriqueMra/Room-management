@page "/user/edit/{what}/{email}"
@model UserEditModel
@{}

<h2>@ViewData["Title"]</h2>

<form method="post" class="edit-form">
    <h1>Change @Model.What</h1>
    <div class="form-group">
        @if (Model.ViewData["Title"].ToString().Contains(Model.What))
        {
            <label asp-for="Input.Name">New Name</label>
            @Html.TextBoxFor(m => m.Input.Name, new { @placeholder = "New Name" })
            @Html.Hidden("type", "name")
            @Html.Hidden("email", @ViewData["Email"])
            <span class="text-danger" asp-validation-for="Input.Name"></span>
        }
        else if (Model.ViewData["Title"].ToString().Contains(Model.What))
        {
            <label asp-for="Input.Email">New Email</label>
            @Html.TextBoxFor(m => m.Input.Email, new { @placeholder = "New-Email@gmail.com" })
            @Html.Hidden("type", "email")
            @Html.Hidden("email", @ViewData["Email"])
            <span class="text-danger" asp-validation-for="Input.Email"></span>
        }
        else if (Model.ViewData["Title"].ToString().Contains(Model.What))
        {
            <label class="mb-3" asp-for="Input.Password">New Password</label>
            @Html.TextBoxFor(m => m.Input.Password, new { @placeholder = "Your password (minimum 8, maximum 100)" })
            <span class="text-danger" asp-validation-for="Input.Password"></span>
            <br>
            <label class="mt-3" asp-for="Input.
            ConfirmPassword">Confirm Password</label>
            @Html.TextBoxFor(m => m.Input.ConfirmPassword, new { @placeholder = "Confirm your password" })
            @Html.Hidden("type", "password")
            @Html.Hidden("email", @ViewData["Email"])
            <span class="text-danger" asp-validation-for="Input.ConfirmPassword"></span>
        }
    </div>

    <button type="submit" class="btn btn-primary">Save Changes</button>
</form>
<br>
<a href="/home">Back</a>
