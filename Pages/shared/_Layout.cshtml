@using System.Security.Claims
@{
    var manager = User.FindFirst(ClaimTypes.Email)?.Value ?? "";
}

<!DOCTYPE html>
<html lang="pt-br">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="~/css/layout.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <title>@ViewData["Title"]</title>
</head>

<body>
    <div class="wrapper d-flex flex-column min-vh-100">
        <header class="l-header py-3 bg-dark text-white">
            <nav class="container d-flex justify-content-between align-items-center">
                <ul class="nav">
                    <li class="nav-item">
                        <a class="nav-link text-white" href="~/home">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-white" href="~/rooms">Rooms</a>
                    </li>
                </ul>
                <ul class="nav">
                    @if (User.Identity.IsAuthenticated)
                    {
                        <li class="nav-item">
                            <form action="~/auth/logout" method="post">
                                <button type="submit" class="btn btn-primary">Logout</button>
                            </form>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" href="/user/manager/@manager">Manager Account</a>
                        </li>
                    }
                    else
                    {
                        <li class="nav-item">
                            <a class="nav-link text-white" href="~/auth/login">Login</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" href="~/auth/register">Register</a>
                        </li>
                    }
                </ul>
            </nav>
        </header>

        <main class="content container flex-grow-1 py-5">
            @RenderBody()
        </main>

        <footer class="l-footer bg-dark text-white text-center py-3">
            <p>Criado por - &copy;Pedro Henrique Moreira</p>
        </footer>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" crossorigin="anonymous"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>
